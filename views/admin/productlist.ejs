  <style>
    /* Optional: Add your custom styles here */
    body {
      padding-top: 56px;
      margin-bottom: 60px; /* Adjusted for fixed navbar */
    }

    .sidebar {
      position: fixed;
      top: 56px; /* Height of the fixed navbar */
      bottom: 0;
      left: 0;
      z-index: 1000;
      padding-top: 30px;
      padding-left: 15px;
      padding-right: 15px;
      background-color: #343a40;
      color: #fff;
    }

    .footer {
      position: fixed;
      bottom: 0;
      width: 100%;
      background-color: #343a40;
      color: #fff;
      text-align: center;
      padding: 10px;
    }

    .main-content {
      margin-left: 250px;
      padding: 20px;
    }
    table {
      width: 100%;
      margin-bottom: 1rem;
      color: #343a40;
    }

    table th,
    table td {
      padding: 0.75rem;
      vertical-align: top;
      border-top: 1px solid #dee2e6;
      text-align: left;
    }

    th {
      background-color: #343a40;
      color: #fff;
    }

    tbody tr:nth-child(odd) {
      background-color: rgba(0, 0, 0, 0.05);
    }

    .btn-block {
      width: 100%;
    }

    .pagination {
      margin-top: 20px;
      display: flex;
      justify-content: center;
    }

    .pagination li {
      list-style: none;
      margin: 0 5px;
    }

    .pagination a {
      text-decoration: none;
      color: #007bff;
      background-color: #fff;
      padding: 8px 12px;
      border: 1px solid #dee2e6;
      border-radius: 4px;
    }

    .pagination .page-item.active .page-link {
      background-color: #007bff;
      color: #fff;
      border: 1px solid #007bff;
    }

    .clearfix {
      overflow: auto;
    }

    .hint-text {
        margin-top: 20px;
      display: flex;
      justify-content: center;
    }
    #editButton
    {
        height:fit-content;
        width: 150px;
        padding: 2px;
    }
    #deleteButton
    {
        height:fit-content;
        width: 150px;
        padding: 2px;
    }
    .add-product {
        margin-top: 20px;
        margin-bottom: 5px;
        margin-right: 20px;
        display: flex;
        justify-content: right;
    }

    .add-product a {
      text-decoration: none;
    }

    .add-product button {
      display: block;
      width: 150px;
      padding: 2px;
      font-size: 16px;
      text-align: center;
      background-color: #007bff;
      color: #fff;
      border: 1px solid #007bff;
      border-radius: 5px;
      cursor: pointer;
    }
    .ul-class ul
    {
      list-style: none;
    } 

    /* Responsive styles */
    @media (max-width: 768px) {
      .main-content {
        margin-left: 0;
      }

      .sidebar {
        position: fixed;
        top: 56px;
        bottom: 0;
        left: -250px; /* Hide the sidebar by default on smaller screens */
        z-index: 1000;
        padding-top: 150px;
        padding-left: 15px;
        padding-right: 15px;
        background-color: #343a40;
        color: #fff;
        transition: left 0.3s ease; /* Add smooth transition effect */
      }
     
      .sidebar.show {
        left: 0; /* Show the sidebar when the "show" class is added */
      }

      .navbar-toggler {
        display: block;
      }
      table {
        overflow-x: auto;
      }
    }
  </style>
  <script>
    // JavaScript to toggle the "show" class on the sidebar
    document.addEventListener("DOMContentLoaded", function () {
      var toggleButton = document.getElementById("sidebarToggle");
      var sidebar = document.querySelector(".sidebar");
  
      toggleButton.addEventListener("click", function () {
        sidebar.classList.toggle("show");
      });
    });
  </script>
  <title>Admin Dashboard</title>
</head>
<body>

