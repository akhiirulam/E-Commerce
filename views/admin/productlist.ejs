          </li>
          <li class="nav-item">
            <a class="nav-link" href="/returenedOrder">
              <i class="fas fa-tags"></i> ReturnedOrder
            </a>
          </li>
        </ul>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/couponList">
          <i class="fas fa-tags"></i> Coupon
        </a>
      </li>
    </ul>
  </div>

  <main>
    <div class="add-product">
        <a href="/addproduct">
          <button type="button" class="form-control">Add New Product</button>
        </a>
      </div>
    <div class="main-content">
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
                <th>#</th>
                <th>BookName</th>
                <th>Bookdetail</th>
                <th>Author</th>
                <th>Publisher</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Genres</th>
                <th>Year</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% productData.forEach((product, index )=> { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= product.bookName %></td>
                  <td><%= product.bookDetail %></td>
                  <td><%= product.author %></td>
                  <td><%= product.publisher %></td>
                  <td><%= product.price %></td>
                  <td>
                    <% if (product.stock < 5) { %>
                      <h6 style="color: tomato;">Stock is less than 5</h6>
                    <% } 
                    else 
                    { %> Sufficient Stock <%}
                    %>
                  </td>
                  
                  <td><%= product.genres && product.genres.category ? product.genres.category : 'N/A' %></td>
                  <td><%= product.year %></td>
                  <td style="height: 100px; width: 100px;">
                    <div id="productImageCarousel" class="carousel slide" data-ride="carousel">
                      <div class="carousel-inner">
                        <% if (product.images && Array.isArray(product.images)) { %>
                          <% product.images.forEach((image, index) => { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                              <% if (image && image.contentType && image.data) { %>
                                <img class="d-block w-100" height="100px" width="80px" src="data:image/<%= image.contentType %>;base64, <%= image.data.toString('base64') %>" alt="Product Image">
                              <% } else { %>
                                <!-- Handle the case when image or image.data is undefined -->
                                <span>Image not available</span>
                              <% } %>
                            </div>
                          <% }); %>
                        <% } %>
                      </div>
                    
                      <!-- Add navigation controls if needed -->
                      <a class="carousel-control-prev" href="#productImageCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#productImageCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                    
                      </div>
                    
                  </td>
                  <td>
                  
                    <div class="btn-group p-1 mr-1 " role="group" >
                      <form action="/productedit/<%= product._id %>" method="GET">
                          <button type="submit" id="editButton" class="btn btn-info mr-1" style="width: 80px; height: 38px;" title="Edit" data-toggle="tooltip">Edit</button>
                      </form>
                      
                      <form id="deleteForm_<%= product._id %>" action="/productdelete/<%= product._id %>" method="POST" style="width: 80px; height: 50px;" onsubmit="return confirmDelete('<%= product._id %>')">
                          <button type="submit" class="btn btn-danger" title="Delete" data-toggle="tooltip">Delete</button>
                      </form>
                  </div>
                  </td>
                </tr>
              <% }); %>
          </tbody>
         
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

            <script>
              function confirmDelete(productId) {
                  // Using SweetAlert for confirmation
                  Swal.fire({
                      title: 'Are you sure?',
                      text: 'You won\'t be able to revert this!',
                      icon: 'warning',
                      showCancelButton: true,
                      confirmButtonColor: '#d33',
                      cancelButtonColor: '#3085d6',
                      confirmButtonText: 'Yes, delete it!'
                  }).then((result) => {
                      if (result.isConfirmed) {
                          // If the user clicks Yes, submit the form
                          console.log(`Deleting product with ID: ${productId}`);
                          document.getElementById(`deleteForm_${productId}`).submit();
                      }
                  });
                  // Prevent the default form submission
                  return false;
              }
          </script>
            
        </table>
      </div>
    </div>
  </main>

