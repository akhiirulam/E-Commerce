<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report</title>
    <style>
        /* Add your custom styles here */
        /* This is just an example, you can style it as per your design */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Sales Report</h1>
    <form action="/salesDownloadXl" method="post">
        <button type="submit">Download Report Excel</button>
      </form>

      <form action="/salesDownload" method="post">
        <button type="submit">Download Report PDF</button>
      </form>
    <table>
        <thead>
            <tr>
                <th>Customer</th>
                <th>Address</th>
                <th>Email</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.Customer %></td>
                    <td><%= product.Address %></td>
                    <td><%= product.Email %></td>
                    <td><%= product.Name %></td>
                    <td>$<%= product.Price.toFixed(2) %></td>
                    <td><%= product.Quantity %></td>
                    <td>$<%= product.TotalPrice.toFixed(2) %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
