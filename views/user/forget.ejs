<!DOCTYPE html>
<html lang="en">
<head>
  <title>BookShoppy</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
   <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    /* Custom Styles */

    .navbar-brand img {
      max-height: 20px; /* Set max height for the logo */
    }

    .navbar-nav.ml-auto .nav-link {
      margin-right: 10px; /* Adjust spacing between menu items */
    }

    .carousel-inner {
      border-radius: 0;
    }

    .carousel-item {
      position: relative;
    }

    .carousel-caption {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      color: #fff;
    }

    .carousel-caption h5 {
      font-size: 2.5rem;
      margin-bottom: 20px;
    }

    .carousel-caption p {
      font-size: 1.5rem;
    }

    .card {
      border: none;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      height: 400px;
    }

    .card-header {
      background-color: #007bff;
      color: #fff;
      font-size: 1.5rem;
      text-align: center;
    }

    .card-body img {
      width: 250px;
      height: 250px;
    }

    .card-footer {
      background-color: #007bff;
      color: #fff;
      text-align: center;
    }
    
    .see-more-books-link {
    display: inline-block;
    background-color: #555555; /* Choose a background color */
    color: #fff; /* Text color */
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .see-more-books-link:hover {
    background-color: #131313; /* Hover state background color */
  }

  .footer {
    background-color: #333; /* Dark background color */
    color: #fff; /* Text color */
    padding: 20px 0; /* Padding top and bottom */
    bottom: 0;
    width: 100%;
  }

  .footer p {
    margin-bottom: 0; /* Remove default margin */
  }
  .alert {
    margin-top: 50px;
    width: max-content;
    margin-left:200px;
    border: 1px solid transparent;
    border-radius: 4px;
    }

.alert-danger {
    color: #721c24;
    background-color: #f8d7da;
    border-color: #f5c6cb;
}


    /* Responsive Styles */
    @media (max-width: 767px) {
      body {
        padding-top: 70px; /* Adjusted padding for fixed-top navbar on smaller screens */
      }

      .navbar-brand img {
        max-height: 30px; /* Adjust logo size for smaller screens */
      }

      .navbar-nav.ml-auto .nav-link {
        margin-right: 0; /* Reset margin for better spacing */
      }

      .carousel-caption {
        position: static;
        transform: none;
      }

      .carousel-caption h5 {
        font-size: 2rem;
      }

      .carousel-caption p {
        font-size: 1.2rem;
      }
      .card-header {
        font-size: 1.2rem;
      }

      .card-footer {
        font-size: 0.9rem;
      }

      .footer {
      text-align: center;
    }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-md fixed-top navbar-dark bg-dark">
    <div class="container" id="myNavbar">
      <a class="navbar-brand" href="#"><img src="/images/Logo.png" alt="BookShoppy Logo"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active"><a class="nav-link" href="/home">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/bookview">Products</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Deals</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Stores</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if (locals.user) { %>
            <li class="nav-item"><a class="nav-link"><i class="fas fa-user"></i> <%= user %></a></li>
            <li class="nav-item"><a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Sign Out</a></li>
          <% } 
          else{ %>
            <li class="nav-item"><a class="nav-link" href="/login"><i class="fas fa-sign-in-alt"></i> Sign In</a></li>
          <% } %>
         
        </ul>
      </div>
    </div>
  </nav>
  <!-- Navbar End -->

  
<div class="popup">
  <span class="popuptext" id="myPopup">
    
  </span>
</div>

<div class="d-flex align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
  <div class="container" style="width: 500px">
       <div class="wrapper border border-primary p-3">
           <form action="/forget" method="post" name="Login_Form" class="form-signin">
           <h3 class="mb-3">Forget Password</h3>
         
           <!-- Email input -->
           <div class="form-group">
             <label for="inputEmail" class="sr-only">Email Address</label>
             <input type="text" id="inputEmail" class="form-control" name="email" placeholder="Email Address" autofocus />
             <% if (locals.wrongEmail) { %>
              <span style="color: red;">
                  <strong><%= wrongEmail %></strong>
              </span>
            <% } %>
            <% if (locals.userBlocked) { %>
              <span style="color: red;">
                  <strong><%= userBlocked %></strong> 
              </span>
            <% } %>  
           </div>
                 
           <!-- Login button -->
           <button class="btn btn-lg btn-block" onclick="return validateForm()" style="background-color: rgb(23, 161,0); color: #f8f9fa;" name="Submit" value="Login" type="submit">Send Reset</button>

           <div class="mt-3 text-center">
               <span class="text-muted">Don't have an account? </span>
               <a href="/signup" class="text-primary">Sign Up</a>
           </div>
       </form>
   </div>
</div>

<!-- Existing footer... -->
<footer class="footer fixed-bottom py-3 bg-dark text-white" style="margin-top: 10px;">
  <div class="container text-center">
    <p>Online Store Copyright</p>  
  </div>
</footer>
<script>

    function validateEmail(email) {
          // Regular expression for a simple email validation
          var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          return emailRegex.test(email);
        }
      
        function validateForm() {
          var emailInput = document.getElementById('inputEmail');
          var passwordInput = document.getElementById('inputPassword');
          
          // Validate email
          if (!emailInput.value.trim()) {
            showErrorAlert('Email address is required.');
            emailInput.focus();
            return false; // Prevent form submission
          } else if (!validateEmail(emailInput.value.trim())) {
            showErrorAlert('Please enter a valid email address.');
            emailInput.focus();
            return false; // Prevent form submission
          }
      
          // Additional validation logic for the password if needed
      
          // Allow the form submission if all validations pass
          return true;
        }
      
        function showErrorAlert(message) {
          Swal.fire({
            icon: 'error',
            title: 'Please enter the details',
            text: message,
          });
        }


</script>
  
   <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

